<h1>Add movie to this list</h1>

<% movies = Movie.all %>
<% movie_titles = [] %>
<% movies.each do | movie | %>
<% movie_titles << movie.title %>
<% end %>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment, label: 'Add your review or comments on the film' %>
  <%= f.association :movie, label: 'Select the film' %>
  <%= f.submit 'Add to list' %>
<% end %>
<br>
<%= link_to "Back", lists_path %>
