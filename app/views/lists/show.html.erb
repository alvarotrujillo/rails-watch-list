<h2 class="capitalize"><%= @list.name %></h2>
<br>
<h4 class="capitalize">Included titles:</h4>

<% bookmarks = @list.bookmarks %>

<ul>
  <% bookmarks.each do| bookmark | %>
  <% movie_id = bookmark.movie_id %>
  <% movie = Movie.find(movie_id) %>
  <div class="card-bookmark">
    <li>
      <img src="https://image.tmdb.org/t/p/w200<%= movie.poster_url %>" alt="Poster">
    </li>
    <div class="card-bookmark-infos">
      <h2><%= movie.title %></h2>
      <br>
      <p><%= bookmark.comment %></p>
    </div>
  </div>
  <% end %>
</ul>
<br>

<footer class="footer">
  <div class="non-index">
    <%= link_to "Add movie to list", new_list_bookmark_path(@list) %> |
    <%= link_to "All lists", lists_path %> |
    <%= link_to "Delete list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "You will delete the whole list, are you sure?"} %>
  </div>
</footer>
